<h1>Robot Inventory</h1>

<% @robots.each do |robot| %>
  <h3><%= robot.id %>: <a href="/robots/<%= robot.id %>"><%= robot.name %></a></h3>
  <a href="/robots/<%= robot.id %>/edit">Edit Order</a>
  <form action="/robots/<%= robot.id %>" method="POST">
    <input type="hidden" name="_method" value="DELETE">
    <input type="submit" value="Terminate"/>
  </form>
<% end %>
